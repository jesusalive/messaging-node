{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2019",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": [
      "@types/jest",
      "node",
      "express"
    ],
    "typeRoots": ["./src/Main/config/custom-types.d.ts"],
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "strict": false
  }
}
